{
  "name": "@paltaio/serialport",
  "version": "0.2.2",
  "description": "Pure TypeScript SerialPort implementation for Deno using FFI - no native dependencies required",
  "license": "MIT",
  "exports": "./mod.ts",
  "lock": true,
  "tasks": {
    "dev": "deno run --watch main.ts",
    "format": "deno fmt",
    "check": "deno check examples && deno check src && deno check mod.ts && deno check tests",
    "lint": "deno lint",
    "test": "DENO_NO_CHECK_LEAK=1 deno test -A",
    "test:unit": "DENO_NO_CHECK_LEAK=1 deno test tests/unit/ --allow-ffi",
    "test:integration": "DENO_NO_CHECK_LEAK=1 deno test tests/integration/ -A",
    "test:linux": "DENO_NO_CHECK_LEAK=1 deno test tests/integration/serialport_linux_test.ts -A",
    "test:macos": "DENO_NO_CHECK_LEAK=1 deno test tests/integration/serialport_macos_test.ts -A"
  },
  "fmt": {
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "trailingCommas": "onlyMultiLine",
    "useTabs": false,
    "proseWrap": "preserve"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "lib": [
      "deno.ns",
      "deno.unstable",
      "dom",
      "esnext"
    ]
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/testing/bdd": "jsr:@std/testing@1/bdd"
  },
  "test": {
    "include": [
      "tests/"
    ],
    "exclude": [
      ".tmp/",
      "examples/"
    ]
  },
  "nodeModulesDir": "none",
  "publish": {
    "include": [
      "mod.ts",
      "src/**/*.ts",
      "README.md",
      "LICENSE"
    ],
    "exclude": [
      "tests/**",
      "examples/**",
      "*.test.ts"
    ]
  }
}