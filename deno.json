{
  "$schema": "https://raw.githubusercontent.com/denoland/deno/refs/heads/main/cli/schemas/config-file.v1.json",
  "lock": true,
  "tasks": {
    "dev": "deno run --watch main.ts",
    "format": "deno fmt",
    "lint": "deno lint"
  },
  "fmt": {
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve",
    "exclude": [
      "**/node_modules",
      "**/dist",
      "**/build"
    ]
  },
  "lint": {
    "exclude": [
      "**/node_modules",
      "**/dist",
      "**/build"
    ]
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "lib": [
      "deno.ns",
      "deno.unstable"
    ]
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  }
}