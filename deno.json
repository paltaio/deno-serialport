{
  "name": "@paltaio/serialport",
  "version": "0.1.0",
  "description": "Pure TypeScript SerialPort implementation for Deno using FFI - no native dependencies required",
  "license": "MIT",
  "exports": "./mod.ts",
  "lock": true,
  "tasks": {
    "dev": "deno run --watch main.ts",
    "format": "deno fmt",
    "check": "deno check examples && deno check src && deno check mod.ts",
    "lint": "deno lint"
  },
  "fmt": {
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "trailingCommas": "onlyMultiLine",
    "useTabs": false,
    "proseWrap": "preserve"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "lib": [
      "deno.ns",
      "deno.unstable",
      "dom",
      "esnext"
    ]
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/testing/bdd": "jsr:@std/testing@1/bdd"
  },
  "publish": {
    "include": [
      "mod.ts",
      "src/**/*.ts",
      "README.md",
      "LICENSE"
    ],
    "exclude": [
      "tests/**",
      "examples/**",
      "*.test.ts"
    ]
  }
}